@model IEnumerable<Mint.Models.ExpenseCategory>

@{
    ViewData["Title"] = "Expense Categories";
}
<h1>@ViewData["Title"]</h1>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Expenses List</h2>
        </div>
        <div class="col-6 text-right">
           <a class="btn btn-primary" asp-controller="ExpenseCategory" asp-action="Create">Create New Expense Category</a>
        </div>
    </div>
    <br />

    @if(Model.Count() > 0)
    {
        <table class="table table-striped" style="width:100%">
            <thead>
                <tr>
                    <th scope="col">Category Name</th>
                    <th scope="col">Description</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var expenseCategory in Model)
                {
                    <tr>
                        <td width="50%" scope="row">@expenseCategory.Name</td>
                        <td width="50%" scope="row">@expenseCategory.Description</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No items created yet.</p>
    }
</div>